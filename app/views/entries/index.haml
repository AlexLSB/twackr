- if @service
  - @page_title = @service.name
- elsif @client
  - @page_title = @client.name
- elsif @project
  - @page_title = @project.name
- else
  - @page_title = t('title.entries')
= new_entry_form(@project, @client, @service)

#entries
  - groups = make_entry_groups(@entries)
  - groups.each do |group|
    = entries_header(group[0], group[1], group[2])
    = render :partial => 'entries/entry', :collection => group[1]
  - if @entries.length >= 25
    = render :partial => 'entries/more', :locals => {:num => 25}

- content_for :js_templates do
  = "Timer.init();"
