#entryBox
  - remote_form_for entry, :url => entries_path do |f|
    - unless project.nil?
      = hidden_field_tag 'entry[project_id]', project.id
    - unless service.nil?
      = hidden_field_tag 'entry[service_id]', service.id
    - if !project.nil?
      = f.label :content, "What are you doing in #{entry_project_tag(project.tag)}?"
    - elsif !service.nil?
      = f.label :content, "What #{entry_service_tag(service.tag)} are you working on?"
    - else
      = f.label :content, "What are you doing?"
    = f.text_field :content
